<Window x:Class="WPFTutorial.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFTutorial.View"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="150" Width="250">
    <Grid>
        <StackPanel>
            <TextBox Name="txtInput" Width="200" Height="40" Margin="5" TextChanged="TxtInput_OnTextChanged"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnOK" Content="OK" Width="50" Height="40" Margin="2" Click="BtnOK_OnClick"
                        IsEnabled="False"/>
                <Button Name="btnCancel" Content="Cancel" Width="100" Height="40" Click="BtnCancel_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
